<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="10dp"
    android:visibility="gone">

    <TextView
        android:layout_alignParentLeft="true"
        android:id="@+id/ac_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="left"
        android:text="活动名称:"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_alignParentLeft="true"
        android:id="@+id/ac_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="left"
        android:text="活动类型:思想活动"
        android:layout_below="@+id/ac_name"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_alignParentLeft="true"
        android:id="@+id/ac_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="活动时间:xxxxx"
        android:layout_below="@+id/ac_type"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_alignParentLeft="true"
        android:id="@+id/ac_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="活动地点:xxxxx"
        android:layout_below="@+id/ac_time"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_alignParentLeft="true"
        android:id="@+id/ac_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="面向人群:xxxxx"
        android:layout_below="@+id/ac_place"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_alignParentLeft="true"
        android:id="@+id/ac_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="活动等级:xxxxx"
        android:layout_below="@+id/ac_target"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_alignParentLeft="true"
        android:id="@+id/ac_sponsor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="举办单位:xxx"
        android:layout_below="@+id/ac_level"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_alignParentLeft="true"
        android:id="@+id/ac_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@+id/ac_sponsor"
        android:text="我是详情，我是详情，我是详情，我是详情，我是详情，我是详情我是详情我是详情我是详情我是详情，我是详情，我是详情我是详情"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/content_img"
        android:layout_below="@+id/ac_content"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/mv"/>

    <ImageView
        android:layout_below="@+id/content_img"
        android:id="@+id/logo_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/mv"/>

